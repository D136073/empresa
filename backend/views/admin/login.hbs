<div class="login-box">
    <h2>Login</h2>
    <form action="/admin/login" method="post" >
        <div class="user-box">
            <input type="text" required="true" name="usuario">
            <label>Nombre</label>
        </div>
        <div class="user-box">
            <input type="password" required="true" name="password">
            <label>Pass</label>
        </div>
            <button type="submit" 
            class="btn btn-primary mb-3" id="LoginButton">Ingresar
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            </button>
    </form>
    {{#if error}}
        <p>ALGUN DATO INGRESADO ES INCORRECTO</p>
    {{/if}}
</div>